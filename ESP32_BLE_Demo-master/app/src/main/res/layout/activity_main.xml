<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/Device_Info"
        android:text="Disconnected"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/Device_Rssi"
        android:text="Please connect to a device"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <com.robinhood.spark.SparkView
            android:id="@+id/sparkview"
            android:layout_width="500dp"
            android:layout_height="500dp"
            app:spark_animateChanges="true"
            app:spark_lineColor="@color/colorAccent"
            app:spark_scrubEnabled="true" />
        <TextView
            android:id="@+id/info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_gravity="center"
            android:text="Tap and hold to see the value " />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tare"
            android:id = "@+id/Main_tare"
            android:layout_gravity="center"
            />

        <ToggleButton
            android:id="@+id/writeFile"
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textOff="Write to File"
            android:textOn="Save file" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 0g"
            android:id = "@+id/Main_SetZero"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set 100g"
            android:id = "@+id/Main_SetHund"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
