<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ThresholdTitle"
            android:layout_height="wrap_content"
            android:text="@string/threshold_title"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF000000"
            android:id="@+id/threshline"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 1:"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />

            <TextView
                android:id="@+id/oldValueText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="NULL"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput1"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 2:"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue2"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput2"

                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 3:"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue3"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput3"
                android:text="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 4:"
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value   \n"
                android:paddingTop="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ThreshNumInput4"
                android:text="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/Threshold5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Level 5:"
                android:paddingTop="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValue5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="old value   "
                android:paddingTop="16dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/oldValueText5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="NULL"
                android:paddingTop="16dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/newValue5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="new value  "
                android:paddingTop="4dp"
                />
            <EditText
                android:id="@+id/ThreshNumInput5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ReadThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="16dp"
                android:text="Read Threshold"
                />

            <Button
                android:id="@+id/SaveThreshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:padding="16dp"
                android:text="Save settings"
                />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF000000"
            android:id="@+id/threshline3"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To calibrate, please remove everything that attached to the scale and then press CalibrateStart"
            android:id="@+id/CalibrateGuide"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            android:textAlignment="center"
            />

        <Button
            android:id="@+id/CalibrateStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="15"
            android:text="Calibration Start"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Then please put the 100 gram weight on the scale and then press the CalibrateEnd button "
            android:id="@+id/CalibrateGuide2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/CalibrateEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="15"
            android:text="  Calibration End  "
            android:textAlignment="center"
            />

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
